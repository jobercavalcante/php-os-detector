<phpunit bootstrap="test/bootstrap.php">
    <testsuites>
        <testsuite name="Linux">
            <file>test/DetectorLinuxTest.php</file>
        </testsuite>
        <testsuite name="Unix">
            <file>test/DetectorUnixTest.php</file>
        </testsuite>
        <testsuite name="Windows">
            <file>test/DetectorWindowsTest.php</file>
        </testsuite>
        <testsuite name="UnixOnWindows">
            <file>test/DetectorUnixOnWindowsTest.php</file>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>
</phpunit>
